+++ b/decoder/impeg2d_api_main.c
@@ -775,7 +775,8 @@ IV_API_CALL_STATUS_T impeg2d_api_get_buf_info(iv_obj_t *ps_dechdl,
     {
         u4_stride = ps_dec_state->u4_frm_buf_stride;
     }
