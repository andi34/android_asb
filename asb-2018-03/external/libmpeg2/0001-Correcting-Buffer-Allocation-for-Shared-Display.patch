 decoder/impeg2d_api_main.c | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/decoder/impeg2d_api_main.c b/decoder/impeg2d_api_main.c
index b14762f..7fd3e4a 100644
